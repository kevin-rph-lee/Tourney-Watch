<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        window.tournamentID = <%=tournamentID%>;
    </script>
</head>
<body>
    <% include partials/navbar %>
    <script src="/scripts/tournament_setup.js"></script>

    <main class="container">
        <div class="tournamentheader">
            <h1><%= tournamentName %></h1>
        </div>

        <p> <%=players%>/<%=teamCount * 6%> enrolled</p>

        <div style="text-align: center;">

            <% if (isReady) { %>
            <form method="POST" action="/tournaments/<%= tournamentID %>/start" class="start-tournament">
                <button type="submit" value="Start Tournament">Start Tournament</button>
            </form>
            <% } %>
            <button id="share-button" class="start-tournament">Share</button>
            <% include partials/share_button %>

            </form>
            
        </div>
        <div class="copied-alert"></div>
        <h3>Players Registered</h3>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Blizzard ID</th>
                    <th scope="col">Level</th>
                    <th scope="col">Games Won</th>
                </tr>
            </thead>
            <tbody class="player-table-stats">

            </tbody>
        </table>

    </main>
</body>
</html>
