<!DOCTYPE html>
<html lang="en">
<head>
    <script>
        window.tournamentID = <%=tournamentID%>;
    </script>


</head>
<body>
    <% include partials/navbar %>
    <script src="/scripts/tournament_setup.js"></script>

    <main>
        <div class="tournamentheader">
            <!-- Tournament Name gets appended here from App.js -->
        </div>

        <div>

            <!-- BUTTON GO OFF -->
            <!-- <button class="start-tournament">Start Tournament</button> -->
            <form method="POST" action="/tournaments/<%= tournamentID %>/start">
            <input type="submit" value="Start Tournament-test">
        </div>

        <h3>Players Registered</h3>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Blizzard ID</th>
                  <th scope="col">Level</th>
                  <th scope="col">Games Won</th>
                </tr>
            </thead>
            <tbody class="player-table-stats">

            </tbody>
        </table>

    </main>
</body>
</html>
